<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arrayOperator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bar"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.1">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bar">

            <EditText
                android:id="@+id/textNumber"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/valuesOfArray"
                app:layout_constraintStart_toStartOf="parent">

            </EditText>

            <Button
                android:id="@+id/inputButton"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:foreground="@android:drawable/ic_input_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute" />

            <Button
                android:id="@+id/deleteBlock"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:foreground="@android:drawable/btn_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute" />

            <Button
                android:id="@+id/removeKeyboard"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:foreground="@android:drawable/checkbox_on_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/valuesOfArray"
                tools:ignore="UnusedAttribute" />

            <EditText
                android:id="@+id/nameOfArray"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:hint="@string/name"
                android:inputType="text"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/inputButton"
                app:layout_constraintTop_toBottomOf="@+id/inputButton">

            </EditText>

            <EditText
                android:id="@+id/arraySize"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:hint="@string/size"
                android:inputType="number"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/inputButton">

            </EditText>

            <EditText
                android:id="@+id/valuesOfArray"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:hint="@string/values"
                android:inputType="text"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/nameOfArray"
                app:layout_constraintTop_toBottomOf="@+id/textView1">

            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="["
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@+id/nameOfArray"
                app:layout_constraintTop_toBottomOf="@+id/inputButton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="]:"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@+id/arraySize"
                app:layout_constraintTop_toBottomOf="@+id/inputButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</merge>